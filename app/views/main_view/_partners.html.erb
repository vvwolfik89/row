<!--================ Testimonial section start =================-->
<section class="bg-albaster section-padding--small">
  <div class="container">
    <div class="section-intro text-center pb-65px">
      <h2 class="section-intro__title"><%= t('our_partners') %></h2>
      <!--      <p>Female divided bearing rule one called said Beginning set you living above saw seasons void created fruitful third years god.</p>-->
    </div>

    <div class="owl-carousel owl-theme testimonial">
      <% parthers_collection.each do |partner| %>
        <div class="testimonial__item">
          <div class="row">
            <div class="col-md-3 col-lg-2 align-self-center">
              <div class="testimonial__img">
                <a href="https://<%= partner.url_address %>">
                  <%= image_fu partner.icon, nil, class: "card-img rounded-0", style: "height: auto" %>
                </a>
              </div>
            </div>
            <div class="col-md-9 col-lg-10">
              <div class="testimonial__content mt-3 mt-sm-0">
                <a href="https://<%= partner.url_address %>">
                  <h3><%= partner.title %></h3>
                </a>
                <div class="testimonial__i">
                  <%= partner.description.html_safe if partner.description %>
                </div>
                <span class="testimonial__icon"><i class="ti-quote-right"></i></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!--================ Testimonial section end =================-->
