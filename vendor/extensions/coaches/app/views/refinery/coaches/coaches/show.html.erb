<% content_for :body_content_title do %>
  <%= @coach.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%= raw @coach.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%= raw @coach.last_name %>
    </p>
  </section>
  <section>
    <h1>Patronymic</h1>
    <p>
      <%= raw @coach.patronymic %>
    </p>
  </section>
  <section>
    <h1>Bday</h1>
    <p>
      <%= raw @coach.bday %>
    </p>
  </section>
  <section>
    <h1>Rowing Type</h1>
    <p>
      <%= raw @coach.rowing_type %>
    </p>
  </section>
  <section>
    <h1>Icon</h1>
    <p>
      <%= image_fu @coach.icon, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%= raw @coach.description %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%= raw @coach.position %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="coaches">
      <% @coaches.each do |coach| %>
        <li>
          <%= link_to coach.first_name, refinery.coaches_coach_path(coach) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
