<ul>
  <% if ::Refinery::Competitions::Admin::CompetitionsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.competitions_admin_competitions_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_competitions_admin_competition_path, t('.create_new') %>
  </li>
  <% if !searching? && ::Refinery::Competitions::Admin::CompetitionsController.sortable? && ::Refinery::Competitions::Competition.many? %>
    <li>
      <%= action_label :reorder,
                       refinery.competitions_admin_competitions_path,
                       t('.reorder', what: "Competitions"), id: 'reorder_action' %>
      <%= action_label :reorder_done,
                       refinery.competitions_admin_competitions_path,
                       t('.reorder_done', what: "Competitions"), id: 'reorder_action_done', class: 'hidden' %>
    </li>
  <% end %>
</ul>
