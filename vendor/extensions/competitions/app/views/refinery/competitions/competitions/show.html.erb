<% content_for :body_content_title do %>
  <%= @competition.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%= raw @competition.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%= raw @competition.description %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @competition.image, nil %>
    </p>
  </section>
  <section>
    <h1>Type Of Competition</h1>
    <p>
      <%= raw @competition.type_of_competition %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%= raw @competition.location %>
    </p>
  </section>
  <section>
    <h1>Date Of Competition</h1>
    <p>
      <%= raw @competition.date_of_competition %>
    </p>
  </section>
  <section>
    <h1>Country</h1>
    <p>
      <%= raw @competition.country %>
    </p>
  </section>
  <section>
    <h1>City</h1>
    <p>
      <%= raw @competition.city %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="competitions">
      <% @competitions.each do |competition| %>
        <li>
          <%= link_to competition.title, refinery.competitions_competition_path(competition) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>


