<% content_for :body_content_title do %>
  <%= @preview.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%= raw @preview.title %>
    </p>
  </section>
  <section>
    <h1>Icon</h1>
    <p>
      <%= image_fu @preview.icon, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%= raw @preview.description %>
    </p>
  </section>
  <section>
    <h1>Is Active</h1>
    <p>
      <%= raw @preview.is_active %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="previews">
      <% @previews.each do |preview| %>
        <li>
          <%= link_to preview.title, refinery.previews_preview_path(preview) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
