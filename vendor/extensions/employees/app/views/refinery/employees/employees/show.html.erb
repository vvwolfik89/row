<% content_for :body_content_title do %>
  <%= @employee.first_name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>First Name</h1>
    <p>
      <%= raw @employee.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%= raw @employee.last_name %>
    </p>
  </section>
  <section>
    <h1>Patronymic</h1>
    <p>
      <%= raw @employee.patronymic %>
    </p>
  </section>
  <section>
    <h1>Employee Type</h1>
    <p>
      <%= raw @employee.employee_type %>
    </p>
  </section>
  <section>
    <h1>Type Education</h1>
    <p>
      <%= raw @employee.type_education %>
    </p>
  </section>
  <section>
    <h1>Education</h1>
    <p>
      <%= raw @employee.education %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%= raw @employee.phone %>
    </p>
  </section>
  <section>
    <h1>Bdate</h1>
    <p>
      <%= raw @employee.bdate %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%= raw @employee.description %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%= raw @employee.position %>
    </p>
  </section>
  <section>
    <h1>Beginning Work At</h1>
    <p>
      <%= raw @employee.beginning_work_at %>
    </p>
  </section>
  <section>
    <h1>Icon</h1>
    <p>
      <%= image_fu @employee.icon, nil %>
    </p>
  </section>
  <section>
    <h1>Is Active</h1>
    <p>
      <%= raw @employee.is_active %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="employees">
      <% @employees.each do |employee| %>
        <li>
          <%= link_to employee.first_name, refinery.employees_employee_path(employee) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
