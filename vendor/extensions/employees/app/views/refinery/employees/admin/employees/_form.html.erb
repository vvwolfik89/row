<%= simple_form_for [refinery, :employees_admin, @employee] do |f| -%>
  <%= render '/refinery/admin/error_messages',
             :object => @employee,
             :include_object_name => true %>
  <%= f.input :is_active %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :patronymic %>
  <%= f.input :bdate, as: :date %>
  <%= f.input :position %>
  <%= f.input :beginning_work, as: :date %>
  <%= f.input :employee_type, collection: Refinery::Employees::Employee.employee_types.map {|key, _| [t("employee_type.#{key}"), key]}, label: 'EmpType', prompt: false %>
  <%= f.input :type_education, collection: Refinery::Employees::Employee.type_educations.map {|key, _| [key.humanize, key]}, label: 'Type', prompt: false %>
  <%= f.input :education %>
  <%= f.input :phone %>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @employee.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
               :f => f,
               :fields => [:description],
               :object => "employees/employee" -%>
  </div>


  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.employees.admin.employees.employee'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @employee.first_name),
             cancel_url: refinery.employees_admin_employees_path -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
      $(document).ready(function () {
          page_options.init(false, '', '');
      });
  </script>
<% end -%>
