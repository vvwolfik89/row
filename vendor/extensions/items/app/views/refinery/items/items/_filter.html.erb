<div class="row">
  <div class="col-md-6">
    <div class="panel">
      <div class="panel-body">
        <%= form_tag("/items", class: "form-horizontal", method: :get) do %>
          <div class="form-group">
            <div class="col-md-3">
              <%= label_tag("type_news", t("news.type_news"), class: "control-label") %>
            </div>
            <div class="col-md-9">
              <%= select_tag("type_news", options_for_select(Refinery::Items::Item.type_news.map {|type, index| [t("type_news.#{type}"), index]}, params[:type_news]), prompt: "", class: "form-control") %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-3">
              <%= label_tag("keyword", "Name Keyword", class: "control-label") %>
            </div>
            <div class="col-sm-9">
              <%= text_field_tag("keyword", params[:keyword], class: "form-control") %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-4">
              <div class="controls">
                <%= submit_tag("Filter", class: "btn btn-info btn-block") %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
