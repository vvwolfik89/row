<%#= render partial: "filter" %>

<div>
  <!--================Blog Categorie Area =================-->
  <section class="blog_categorie_area">
    <div class="container">
      <div class="row">
        <div class="col-sm-6 col-lg-4 mb-4 mb-lg-0">
          <div class="categories_post">
            <img class="card-img rounded-0" src="images/news/birth_days.jpg" alt="post">
            <div class="categories_details">
              <div class="categories_text">
                <a href="items?utf8=✓&type_news=0">
                  <h5><%= t('type_news.birth_days') %></h5>
                </a>
                <div class="border_line"></div>
                <!--                <p>Enjoy your social life together</p>-->
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-4 mb-4 mb-lg-0">
          <div class="categories_post">
            <img class="card-img rounded-0" src="images/news/world_news.jpg" alt="post">
            <div class="categories_details">
              <div class="categories_text">
                <a href="items?utf8=✓&type_news=1">
                  <h5><%= t('type_news.world_news') %></h5>
                </a>
                <div class="border_line"></div>
                <!--                <p>Be a part of politics</p>-->
              </div>
            </div>
          </div>
        </div>
        <div class="col-sm-6 col-lg-4 mb-4 mb-lg-0">
          <div class="categories_post">
            <img class="card-img rounded-0" src="images/news/chanel_news.jpg" alt="post">
            <div class="categories_details">
              <div class="categories_text">
                <a href="items?utf8=✓&type_news=2">
                  <h5><%= t('type_news.chanel_news') %></h5>
                </a>
                <div class="border_line"></div>
                <!--                <p>Let the food be finished</p>-->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================Blog Categorie Area =================-->

  <!--================Blog Area =================-->
  <section class="blog_area pb-xl-4">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="blog_left_sidebar">
            <% @items.each do |item| %>
              <article class="row blog_item">
                <div class="col-md-3">
                </div>
                <div class="col-md-9">
                  <div class="blog_post">
                    <%= image_fu item.icon, nil, class: "card-img rounded-0", style: "height: auto" %>
                    <div class="blog_details">
                      <a href="items/<%= item.id %>">
                        <h2><%= item.title %></h2>
                      </a>
                      <%= item.content.html_safe %>
                      <a class="button button-blog" href="items/<%= item.id %>"><%= t('news.view') %></a>
                    </div>
                  </div>
                </div>
              </article>
            <% end %>
          </div>
          <nav aria-label="Page navigation example">
            <div class="col-md-6 text-center">
              <%= will_paginate @items %>
            </div>
          </nav>
        </div>

        <%= render "rigth_menu", items: @items %>
      </div>
    </div>
  </section>
  <!--================Blog Area =================-->
</div>