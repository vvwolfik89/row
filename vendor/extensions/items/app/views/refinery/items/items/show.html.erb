<% content_for :body_content_title do %>
  <%= @item.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%= raw @item.title %>
    </p>
  </section>
  <section>
    <h1>Date Start</h1>
    <p>
      <%= raw @item.date_start %>
    </p>
  </section>
  <section>
    <h1>Date End</h1>
    <p>
      <%= raw @item.date_end %>
    </p>
  </section>
  <section>
    <h1>Icon</h1>
    <p>
      <%#= image_fu @item.icon, nil %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%= raw @item.content %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%= raw @item.description %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%= raw @item.position %>
    </p>
  </section>
  <section>
    <h1>Type News</h1>
    <p>
      <%= raw @item.type_news %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="items">
      <% @items.each do |item| %>
        <li>
          <%= link_to item.title, refinery.items_item_path(item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
