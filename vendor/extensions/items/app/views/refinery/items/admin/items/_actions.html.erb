<ul>
  <% if ::Refinery::Items::Admin::ItemsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.items_admin_items_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_items_admin_item_path, t('.create_new') %>
  </li>
  <% if !searching? && ::Refinery::Items::Admin::ItemsController.sortable? && ::Refinery::Items::Item.many? %>
    <li>
      <%= action_label :reorder,
                       refinery.items_admin_items_path,
                       t('.reorder', what: "Items"), id: 'reorder_action' %>
      <%= action_label :reorder_done,
                       refinery.items_admin_items_path,
                       t('.reorder_done', what: "Items"), id: 'reorder_action_done', class: 'hidden' %>
    </li>
  <% end %>
</ul>
