<%= form_for [refinery, :items_admin, @item] do |f| -%>
  <%= render '/refinery/admin/error_messages',
             :object => @item,
             :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :date_start -%>
    <%= f.datetime_select :date_start -%>
  </div>

  <div class='field'>
    <%= f.label :date_end -%>
    <%= f.datetime_select :date_end -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @item.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
               :f => f,
               :fields => [:content, :description],
               :object => "items/item" -%>
  </div>

  <%= render '/refinery/admin/form_actions', f: f,
             continue_editing: false,
             delete_title: t('delete', scope: 'refinery.items.admin.items.item'),
             delete_confirmation: t('message', scope: 'refinery.admin.delete', title: @item.title),
             cancel_url: refinery.items_admin_items_path -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
      $(document).ready(function () {
          page_options.init(false, '', '');
      });
  </script>
<% end -%>
