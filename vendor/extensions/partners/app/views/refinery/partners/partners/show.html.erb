<% content_for :body_content_title do %>
  <%= @partner.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%= raw @partner.title %>
    </p>
  </section>
  <section>
    <h1>Icon</h1>
    <p>
      <%#= image_fu @partner.icon, nil %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%= raw @partner.description %>
    </p>
  </section>
  <section>
    <h1>Is Active</h1>
    <p>
      <%= raw @partner.is_active %>
    </p>
  </section>
  <section>
    <h1>Url Address</h1>
    <p>
      <%= raw @partner.url_address %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%= raw @partner.position %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="partners">
      <% @partners.each do |partner| %>
        <li>
          <%= link_to partner.title, refinery.partners_partner_path(partner) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
