<ul>
  <% if ::Refinery::Partners::Admin::PartnersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.partners_admin_partners_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_partners_admin_partner_path, t('.create_new') %>
  </li>
  <% if !searching? && ::Refinery::Partners::Admin::PartnersController.sortable? && ::Refinery::Partners::Partner.many? %>
    <li>
      <%= action_label :reorder,
                       refinery.partners_admin_partners_path,
                       t('.reorder', what: "Partners"), id: 'reorder_action' %>
      <%= action_label :reorder_done,
                       refinery.partners_admin_partners_path,
                       t('.reorder_done', what: "Partners"), id: 'reorder_action_done', class: 'hidden' %>
    </li>
  <% end %>
</ul>
