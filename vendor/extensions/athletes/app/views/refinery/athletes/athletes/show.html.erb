<div class="container">
  <div class="row">
    <div class="athlete-card">
      <div class="athlete-card-name"><h5 class="section-title h1"><%= @athlete.full_name %></h5></div>
      <div class="athlete-icon">
        <%= image_fu @athlete.icon, nil, class: "", alt: "card image" %>
      </div>
    </div>

    <div class="athlete-card-info">
      <div class="athlete-card-info-header">
        <%= @athlete.full_name %>
      </div>
      <div class="athlete-card-info-body">
        <dl>
          <dd class="info-card__key"><%= t('type_sport') %>:</dd>
          <dt class="info-card__value"><%= t("rowing_types.#{@athlete.rowing_type}") %></dt>
          <dd class="info-card__key"><%= t('bday') %>:</dd>
          <dt class="info-card__value"><%= @athlete.bday %></dt>
          <dd class="info-card__key"><%= t('teritorial_unit') %>:</dd>
          <dt class="info-card__value"><%= @athlete.territorial_unit %></dt>
        </dl>
      </div>
    </div>
  </div>
</div>